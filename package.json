  "version": "2.1.2",
  "description": "Solid-compatible Panes: Chat",
  "main": "./src/main.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint": "eslint '*.js'",
    "lint-fix": "eslint '*.js' --fix",

    "message",
    "discusssion",
    "decentralized",
    "web",
    "rdf",
    "ldp",
    "linked",
    "pane",
    "app",
    "data"
  ],
  "author": "Tim Berners-Lee <timbl@mit.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/solid/chat-pane/issues"
  },
  "homepage": "https://github.com/solid/chat-pane",
  "dependencies": {
    "solid-ui": "^2.1.0"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.8",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
